<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlakesOrganicAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kh_mauve</item>
        <item name="colorPrimaryVariant">@color/kh_mauve</item>
        <item name="colorOnPrimary">@color/atn_off_white</item>
        <item name="android:windowBackground">@color/kh_mauve</item>
<!--        <item name="android:windowBackground">@color/coffee_brown_background2</item>-->
        <item name="android:fontFamily">@font/poppins_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/atn_off_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/MyToolbar</item>
    </style>

    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar.Primary" >
        <item name="titleTextColor">@color/atn_off_white</item>
        <item name="titleCentered">true</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="ImageView.Round" parent="">
        <item name="cornerSize">40%</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>
</resources>